FROM python:3.6
LABEL author="Joseph Niel Tuazon <josephnieltuazon@gmail.com>"

ENV APPDIR /app
ENV MONGODB_USERNAME ${MONGODB_USERNAME}
ENV MONGODB_PASSWORD ${MONGODB_PASSWORD}
ENV MONGODB_HOST ${MONGODB_HOST}
ENV MONGODB_PORT ${MONGODB_PORT}

ADD . ${APPDIR}
WORKDIR ${APPDIR}

RUN pip3 install -e .

EXPOSE 5000

CMD ["sh", "-c", "./start.sh"]
